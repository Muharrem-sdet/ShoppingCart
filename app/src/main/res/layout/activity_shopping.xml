                app:layout_constraintTop_toBottomOf="@id/button_item_7" />

            <Button
                android:id="@+id/button_item_11"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:text="@string/item_name_11"
                app:layout_constraintEnd_toStartOf="@id/button_item_12"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/button_item_9" />

            <Button
                android:id="@+id/button_item_12"
                android:layout_width="0dp"
